<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/reg_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="20dp"
            android:text="完善个人信息"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="姓名"
            android:textSize="20dp"
            android:gravity="center_horizontal|center_vertical"
            android:layout_weight="2.82" />
        <EditText
            android:id="@+id/name"
            android:layout_width="319dp"
            android:layout_height="match_parent"
            android:hint="请输入您的姓名"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="性别"
            android:textSize="20dp"
            android:gravity="center_horizontal|center_vertical"
            android:layout_weight="2.82" />
        <EditText
            android:id="@+id/gender"
            android:layout_width="268dp"
            android:layout_height="match_parent"
            android:hint="男or女"
            android:textSize="20dp"
            android:layout_weight="0.21" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="年龄"
            android:textSize="20dp"
            android:gravity="center_horizontal|center_vertical"
            android:layout_weight="2.82" />
        <EditText
            android:id="@+id/age"
            android:layout_width="268dp"
            android:layout_height="match_parent"
            android:hint="请输入您的年龄"
            android:textSize="20dp"
            android:layout_weight="0.21" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="专业"
            android:textSize="20dp"
            android:gravity="center_horizontal|center_vertical"
            android:layout_weight="2.82" />
        <EditText
            android:id="@+id/major"
            android:layout_width="268dp"
            android:layout_height="match_parent"
            android:hint="请输入您的专业"
            android:textSize="20dp"
            android:layout_weight="0.21" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="学号"
            android:textSize="20dp"
            android:gravity="center_horizontal|center_vertical"
            android:layout_weight="2.82" />
        <EditText
            android:id="@+id/studentaccount"
            android:layout_width="268dp"
            android:layout_height="match_parent"
            android:hint="请输入您的学号"
            android:textSize="20dp"
            android:layout_weight="0.21" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="密码"
            android:textSize="20dp"
            android:gravity="center_horizontal|center_vertical"
            android:layout_weight="2.82" />
        <EditText
            android:id="@+id/password"
            android:layout_width="268dp"
            android:layout_height="match_parent"
            android:hint="请输入您的密码"
            android:inputType="textPassword"
            android:textSize="20dp"
            android:layout_weight="0.21" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="重复密码"
            android:textSize="20dp"
            android:gravity="center_horizontal|center_vertical"
            android:layout_weight="2.82" />
        <EditText
            android:id="@+id/password_twice"
            android:layout_width="268dp"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:hint="请再次输入您的密码"
            android:textSize="20dp"
            android:layout_weight="0.21" />
    </LinearLayout>



    <Button
        android:id="@+id/submit"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="提交" />
</LinearLayout>
